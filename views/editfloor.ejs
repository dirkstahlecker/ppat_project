<!-- Edit form - START -->
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <form class="form-horizontal" method="post" action="/buildings/floorplan/edit/<%= floorplan._id %>">
                    <fieldset>
                        <legend class="text-center header">Edit Floor <%= floorplan.number %> of <%= building.name %></legend>
                        
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-1 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                Floor number
                                <input id="name" name="name" type="text" placeholder="<%= floorplan.number %>" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-1 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                Description
                                <input id="description" name="description" type="text" placeholder="" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-1 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                            <div class="col-md-8">
                                Image (.JPG only)
                                <input id="image" name="image" type="file" placeholder="ex: /username/documents/img.jpg" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <input type="button" id="formSubmit" name="formSubmit" class="btn btn-primary btn-lg" value="Submit" />
                            </div>
                        </div>
                    </fieldset>
                </form>                            	
                <form class="form-horizontal" method="post" action="/buildings/floorplan/delete/<%= floorplan._id %>/<%= building._id %>">
                	
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <button type="submit" id="delete" class="btn btn-lg btn-danger">Delete Floor</button>
                        </div>
                    </div>
                    
                </form> 
            </div>
        </div>
    </div>
